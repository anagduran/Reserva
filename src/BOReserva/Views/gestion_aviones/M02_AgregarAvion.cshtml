@model BOReserva.Models.gestion_aviones.CAgregarAvion

 <!---------------------- SECCION DE AGREGAR AVION ---------------->
@using (Html.BeginForm("guardarAvion", "gestion_aviones", null, FormMethod.Post, new { @id = "formGuardarAvion", @class = "form-horizontal" }))
{
<div class="row">
    <div class="col-md-12">
        <div class="box">
                 
            <div class="box-body">
                <h2 class="box-title"> Agregar Avión</h2>
                <div class="row">
                    <div class="col-md-12">

                        <div>
                            &nbsp;
                            <div class="col-md-12">
                                <div class="col-xs-6">
                                    <label for="matriculaAvion">Inserte la matricula del Avión:</label>
                                    @Html.TextBoxFor(m => m._matriculaAvion, null, new { @class = "form-control", @placeholder = "HK-4549", @id = "matriculaAvion" })

                                </div>
                                <div class="col-xs-6">
                                    <label for="modeloAvion">Inserte el modelo del Avión:</label>
                                    @Html.TextBoxFor(m => m._modeloAvion, null, new { @class = "form-control", @placeholder = "Boeing 777", @id = "modeloAvion" })

                                </div>
                            </div>
                        </div>

                        <div>
                            &nbsp;
                            <div class="col-md-12">
                                <div class="col-xs-6">
                                    <label for="capacidadPasajerosTurista">Capacidad de pasajeros (Clase Turista):</label>
                                    @Html.TextBoxFor(m => m._capacidadPasajerosTurista, null, new { @class = "form-control", @placeholder = "0", @type = "number", @id = "capacidadTuristas" })

                                </div>
                                <div class="col-xs-6">
                                    <label for="capacidadPasajerosEjecutiva">Capacidad de pasajeros (Clase Ejecutiva):</label>
                                    @Html.TextBoxFor(m => m._capacidadPasajerosEjecutiva, null, new { @class = "form-control", @placeholder = "0", @type = "number", @id = "capacidadEjecutiva" })

                                </div>
                            </div>
                            </div>

                        <div>
                            &nbsp;
                            <div class="col-md-12">
                                <div class="col-xs-6">
                                    <label for="capacidadPasajerosVIP">Capacidad de pasajeros (Clase VIP):</label>
                                    @Html.TextBoxFor(m => m._capacidadPasajerosVIP, null, new { @class = "form-control", @placeholder = "0", @type = "number", @id = "capacidadVIP" })

                                </div>
                                <div class="col-xs-6">
                                    <label for="capacidadCombustible">Capacidad de Combustible (En litros):</label>
                                    @Html.TextBoxFor(m => m._capacidadMaximaCombustible, null, new { @class = "form-control", @style = "width:273px;", @placeholder = "0", @type = "number", @id = "capacidadCombustible" })

                                </div>
                            </div>
                        </div>

                        <div>
                            &nbsp;
                            <div class="col-md-12">

                                <div class="col-xs-6">
                                    <label for="capacidadEquipaje">Capacidad de Equipaje (En Kilos):</label>
                                    @Html.TextBoxFor(m => m._capacidadEquipaje, null, new { @class = "form-control", @placeholder = "0", @type = "number", @id = "capacidadEquipaje" })

                                </div>

                                <div class="col-xs-6">
                                    <label for="distanciaMaximaDeVuelo">Distancia Máxima de Vuelo (En Kilometros):</label>
                                    @Html.TextBoxFor(m => m._distanciaMaximaVuelo, null, new { @class = "form-control", @placeholder = "0", @type = "number", @id = "distanciaMaximaVuelo" })

                                </div>
                            </div>
                        </div>

                        <div>
                            &nbsp;
                            <div class="col-md-12">

                                <div class="col-xs-6">
                                    <label for="velocidadMaximaDeVuelo">Velocidad Máxima de Vuelo (En Kilometros):</label>
                                    @Html.TextBoxFor(m => m._velocidadMaximaDeVuelo, null, new { @class = "form-control", @placeholder = "0", @type = "number", @id = "velocidadMaximaDeVuelo" })

                                </div>
                            </div>
                        </div>


                            <div class="col-md-12" style="margin-top:10px;">
                                <button type="button" class="btn btn-success" style="display:block; margin-left:auto; margin-right:auto;">Guardar</button>
                            </div>
                        </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->
    
    <script>
    $("#aceptarAvion").click(function (e) {
        e.preventDefault();
        var form = $("#formGuardarAvion");
        $.ajax({
            url: "gestion_aviones/guardarAvion",
            data: form.serialize(),
            type: 'POST',
            success: function (data) {
                alert("Se guardo");
                $('#formGuardarAvion')[0].reset();
            }
        });
    });
</script> 
}
<!------------------- FIN DE SECCION DE AGREGAR AVION ---------------->