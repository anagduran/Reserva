@model List<FOReserva.Models.Restaurantes.CRestaurantModel>

@{
    ViewBag.Title = "Resultados Restaurantes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- FEATURED GRID -->
<section class="featured-grid">


    <div class="container">
        <div class="row">
            <nav class="navbar-default ">
                <div class="container-fluid">
                    <div class="container">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-1">
                                <span class="sr-only">menu</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a href="" class="navbar-brand"><b>Madrid</b></a>
                        </div>
                        <div class="collapse navbar-collapse" id="navbar-1">
                            <ul class="nav navbar-nav">
                                <form class="navbar-form navbar-left">
                                    <div class="form-group">
                                        <input type="text" class="form-control" placeholder="Buscar por restaurante">
                                    </div>
                                    <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
                                </form>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 col-sm-4">
                    <div class="price-clean">
                      
                        <div style="height: 150px;background-image: url('~/Content/assets/images/demo/restaurant/foto.jpg');background-repeat: no-repeat;background-size: cover; padding-top: 50px;">
                            <h3>@item.Name</h3>
                        </div>
                        <hr />
                        <p>@item.Addres <b>Madrid</b>.</p>
                        <hr />
                        <a href="detail_restaurant_reservation.html" class="btn btn-3d btn-primary">Reservar</a>
                    </div>
                </div>
            }

        </div>

    </div>
</section>
